<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.casketseller"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Main screen - login - activity -->
        <activity
            android:name="com.example.casketseller.activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Search screen activity -->
        <activity
            android:name="com.example.casketseller.activities.SearchScreen"
            android:label="@string/title_activity_search_screen" >
            <intent-filter>
                <action android:name="com.example.casketseller.activities.SearchScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.casketseller.activities.CasketsDisplay"
            android:label="@string/title_activity_caskets_display"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="com.example.casketseller.activities.CasketsDisplay" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>